<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.smartpensionspringboot.ljb.dao.BedDao">
    <resultMap id="bedMap" type="recBed">
        <id column="bed_id" property="bedId"/>
        <result column="old_id" property="oldId"/>
        <result column="bed_type" property="bedType"/>
        <result column="isroom" property="isroom"/>
        <result column="bed" property="bed"/>
        <result column="cost" property="cost"/>
        <result column="remarks" property="remarks"/>
        <result column="ctime" property="ctime"/>
        <result column="utime" property="utime"/>
        <result column="dtime" property="dtime"/>
    </resultMap>
    <insert id="addBed" parameterType="recBed" useGeneratedKeys="true" keyProperty="bedId">
        INSERT INTO `rec_bed` (`old_id`,`bed_type`,`isroom`,`bed`,`cost`,`ctime`)
            VALUES(#{oldId},#{bedType},#{isroom},#{bed},#{cost},#{ctime})
    </insert>

    <select id="getBedByOldId" resultMap="bedMap">
        select * from rec_bed where old_id =#{oldId}
    </select>
</mapper>