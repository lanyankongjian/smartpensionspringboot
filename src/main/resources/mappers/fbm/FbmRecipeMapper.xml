<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.smartpensionspringboot.fbm.dao.FbmRecipeMapper">
    <resultMap id="queryMapperone" type="com.example.smartpensionspringboot.fbm.pojos.FbmRecipe">
        <id column="re_id" property="reId"></id>
        <result column="re_name" property="reName"/>
        <result column="re_note" property="reNote"/>
        <result column="re_month" property="reMonth"/>
        <result column="re_day" property="reDay"/>
        <result column="re_category" property="reCategory"></result>


    </resultMap>
    <select id="queryFbmRecipe" resultMap="queryMapperone" parameterType="com.example.smartpensionspringboot.fbm.vo.ParamsVo">
        select *from fbm_recipe
        <where>
            <if test="name != ''and name!=null">
                re_name like concat('%', #{name}, '%')
            </if>
        </where>
        order by re_id desc

    </select>
    <insert id="addRecipe" parameterType="com.example.smartpensionspringboot.fbm.pojos.FbmRecipe">
        INSERT INTO fbm_recipe(re_name,re_note,re_month,re_day)
        values
        (#{reName},#{reNote},#{reMonth},#{reDay})
    </insert>
    <update id="updateRecipe" parameterType="com.example.smartpensionspringboot.fbm.pojos.FbmRecipe">
        update fbm_recipe set

        <if test="reName!=null">
            re_name=#{reName},
        </if>
        <if test="reNote!=null">
            re_note=#{reNote},
        </if>
        <if test="reMonth!=null">
            re_month=#{reMonth},
        </if>
        <if test="reDay!=null">
            re_day=#{reDay}
        </if>
        where re_id=#{reId}


   </update>
    <delete id="deleteRecipe" parameterType="int">
        delete from fbm_recipe where re_id=#{id}
    </delete>

</mapper>
